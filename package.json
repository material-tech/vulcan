{
  "name": "@vulcan-js/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "description": "A library for technical indicators",
  "author": "enpitsulin <enpitsulin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/material-tech/vulcan"
  },
  "keywords": [
    "signal",
    "indicator",
    "technical-indicator"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp -r --execute=\"pnpm i\" --commit --tag --push",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@types/node": "catalog:build",
    "@vitest/coverage-v8": "catalog:test",
    "bumpp": "catalog:build",
    "defu": "catalog:runtime",
    "dnum": "catalog:runtime",
    "eslint": "catalog:lint",
    "lint-staged": "catalog:lint",
    "simple-git-hooks": "catalog:lint",
    "tsdown": "catalog:build",
    "typescript": "catalog:build",
    "vitest": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "eslint --cache --fix"
    ]
  }
}
