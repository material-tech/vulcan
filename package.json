{
  "name": "alloy",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.29.3",
  "description": "A library for technical indicators",
  "author": "enpitsulin <enpitsulin@gmail.com>",
  "license": "MIT",
  "keywords": [
    "signal",
    "indicator",
    "technical-indicator"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "prepack": "unbuild",
    "test": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "defu": "^6.1.4",
    "dnum": "^2.17.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.4.3",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "3.1.2",
    "eslint": "^10.0.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "eslint --cache --fix"
    ]
  }
}
